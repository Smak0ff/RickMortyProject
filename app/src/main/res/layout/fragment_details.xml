<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="@dimen/horizontal_margin"
        android:paddingEnd="@dimen/horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/characterImageId"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_marginTop="@dimen/vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/characterNameId"
            style="@style/textView_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/characterImageId" />

        <TextView
            android:id="@+id/characterStatusId"
            style="@style/textView_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/characterNameId" />

        <TextView
            android:id="@+id/characterSpeciesId"
            style="@style/textView_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/characterStatusId" />

        <TextView
            android:id="@+id/characterTypeId"
            style="@style/textView_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/characterSpeciesId" />

        <TextView
            android:id="@+id/characterGenderId"
            style="@style/textView_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/characterTypeId" />

        <TextView
            android:id="@+id/characterEpisodeId"
            style="@style/textView_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/characterGenderId" />

        <TextView
            android:id="@+id/characterCreatedId"
            style="@style/textView_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/characterEpisodeId" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>